<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Areas/HelpPage/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/HelpPage/Content/Site.css" rel="stylesheet" />
    <script src="~/Areas/HelpPage/Content/modernizr-2.6.2.js"></script>  
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("无人值守接口文档", "Index", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("API列表", "Index")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 富士智能</p>
        </footer>
    </div>

    <script src="~/Areas/HelpPage/Content/jquery-1.10.2.min.js"></script>
    <script src="~/Areas/HelpPage/Content/bootstrap.js"></script>
    <script src="~/Areas/HelpPage/Content/respond.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
